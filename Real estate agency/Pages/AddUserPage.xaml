<Page x:Class="Real_estate_agency.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Real_estate_agency.Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage">


    <Grid>
        <Button x:Name="Back" Width="50" Height="50" Background="Transparent" BorderBrush="Transparent" Margin="50,0,50,10" HorizontalAlignment="Left" Click="Back_Click" Style="{StaticResource RoundCorner}">
            <Image Source="..//Images/previous.png" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"   />
        </Button>
        <materialDesign:Card  UniformCornerRadius="20" Background="{DynamicResource panelOverColor}" Width="500" Height="685">

            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <TextBlock x:Name="zagalovok" Text="Добавление/Редактирование агентов" FontSize="20" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontWeight="ExtraBold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Логин: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbLogin" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Пароль: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbPassword" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Имя: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbName" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Фамилия: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbLastName" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Телефон: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbPhone" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Опыт работы: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbExperience" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Электронная почта: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="tbMail" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="День рождения: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <DatePicker x:Name="DpBirthday" BorderBrush="Transparent" Margin="5" FontFamily="Bahnschrift SemiBold" FontSize="16" Width="200"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Дата трудоустройства: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <DatePicker x:Name="DpHireDate" BorderBrush="Transparent" Margin="5" FontFamily="Bahnschrift SemiBold" FontSize="16" Width="200"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Процент агента: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="TbPercent" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Stretch" Width="200" HorizontalAlignment="Right" >
                        <TextBlock Text="Заработано в месяце: " FontSize="16" Foreground="{DynamicResource titleColor1}" HorizontalAlignment="Center" Margin="10" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" Width="182"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Stretch" Width="280" Orientation="Horizontal">
                        <Border CornerRadius="10" BorderBrush="black" BorderThickness="1" Background="{DynamicResource panelColor}" Width="200" HorizontalAlignment="Center">
                            <TextBox x:Name="TbAmount" FontFamily="Bahnschrift SemiBold" Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource titleColor1}" Padding="10"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Button x:Name="AddAgent" Content="Добавить/Изменить" Style="{StaticResource RoundedButtonStyle}" Click="AddAgent_Click">
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
